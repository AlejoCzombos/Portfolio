---
import "@fontsource-variable/plus-jakarta-sans";
import AstroIcon from "@icons/AstroIcon.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-gray-800">
    <slot />
    <footer
      class="h-10 flex flex-col justify-center items-center mt-5 mb-4 text-slate-600 dark:text-slate-300"
    >
      <div class="flex">
        <a href="https://github.com/AlejoCzombos/Portfolio">Hecho con</a>
        <AstroIcon />
      </div>
      <p class="text-sm">
        Dise√±o de <a
          href="https://www.linkedin.com/in/eduardo-robles-9b0807205/"
          >Eduardo Rl</a
        >
      </p>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: dark light;
  }
  :global(.dark) {
    color-scheme: dark;
  }

  html {
    font-family:
      "Plus Jakarta Sans Variable",
      sans-serif,
      system-ui,
      -apple-system,
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell;
  }
</style>
