---
import { presentation } from "@data/presentation.ts";
import FileIcon from "@icons/FileIcon.astro";
import CoffeeIcon from "@icons/CoffeeIcon.astro";

const { title, description, profile, openToWork } = presentation;
---

<img
  class="m-auto sm:m-0 size-44 rounded-full shadow-lg border-[8px] dark:border-gray-900/80 border-slate-200/80"
  src="https://media.licdn.com/dms/image/D4D03AQEuOTiDvAdeMw/profile-displayphoto-shrink_200_200/0/1706145053286?e=1712188800&v=beta&t=RXp9LK6fysGI_rHvTeAcbvnleBkE0eu_2Ntl4-waK88"
  alt="Foto de perfil de Alejo Czombos"
/>
<div
  class="flex flex-col items-center text-center sm:items-start sm:text-start sm:justify-center gap-2"
>
  <h1 class="text-slate-600 dark:text-slate-100 sm:text-4xl text-2xl font-bold">
    {title}
  </h1>
  <p
    class="text-balance text-slate-700 dark:text-slate-300 text-sm sm:text-lg max-w-xl"
  >
    {description}
  </p>
  <div class="flex justify-center gap-2 mt-0.5">
    {openToWork && <CoffeeIcon className="size-6" />}
    <a
      href="/"
      class="flex items-center gap-2 px-4 py-2 text-sm font-semibold rounded-xl dark:text-slate-200 text-slate-700 dark:bg-sky-400/70 dark:hover:bg-sky-300/65 bg-sky-300 hover:bg-sky-200/90"
    >
      <FileIcon />
      Curriculum
    </a>
  </div>
</div>
